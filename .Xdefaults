XTerm*color9:       #ff005f

!green
XTerm*color2:       #afd700
XTerm*color10:      #80ff00

!yellow
XTerm*color3:       #d75f00
XTerm*color11:      #ffba68

!blue
XTerm*color4:       #005f87
XTerm*color12:      #0087af

!magenta
